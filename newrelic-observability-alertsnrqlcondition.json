  "tagging": {
    "taggable": true,
    "tagOnCreate": true,
    "tagUpdatable": true,
    "cloudFormationSystemTags": false,
    "tagProperty": "/properties/Tags"
  },
  "definitions": {
    "ConditionType": {
      "type": "string",
      "enum": [
        "Baseline",
        "Static"
      ]
    }
  },
  "properties": {
    "ConditionType": {
      "$ref": "#/definitions/ConditionType"
    },
    "Condition": {
      "type": "string"
    },
    "PolicyId": {
      "type": "string"
    },
    "Id": {
      "type": "string"
    },
    "EntityGuid": {
      "type": "string"
    },
    "ListQueryFilter": {
      "type": "string"
    },
    "Variables": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z0-9]{1,64}$": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "Tags": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z0-9]{1,64}$": {
            "type": "string"
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "PolicyId",
    "Condition",
    "ConditionType"
  ],
  "additionalProperties": false,
  "primaryIdentifier": [
    "/properties/Id"
  ],
  "additionalIdentifiers": [
    ["/properties/EntityGuid"]
  ],
  "readOnlyProperties": [
    "/properties/Id",
    "/properties/EntityGuid"
  ],
  "handlers": {
    "create": {
      "permissions": [
        "cloudformation:BatchDescribeTypeConfigurations"
      ]
    },
    "read": {
      "permissions": [
        "cloudformation:BatchDescribeTypeConfigurations"
      ]
    },
    "update": {
      "permissions": [
        "cloudformation:BatchDescribeTypeConfigurations"
      ]
    },
    "delete": {
      "permissions": [
        "cloudformation:BatchDescribeTypeConfigurations"
      ]
    },
    "list": {
      "permissions": [
        "cloudformation:BatchDescribeTypeConfigurations"
      ]
    }
  },
  "typeConfiguration": {
    "properties": {
      "Endpoint": {
        "type": "string",
        "default": "https://api.newrelic.com/graphql"
      },
      "APIKey": {
        "type": "string"
      },
      "AccountID": {
        "type": "string"
      }
    },
    "additionalProperties": false,
    "required": [
      "APIKey",
      "AccountID"
    ]
  }
